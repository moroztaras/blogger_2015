<section class="section" xmlns="http://www.w3.org/1999/html">
    <header>
        <h3>{{ 'page.sidebar.tags'|trans({}, 'translation') }}</h3>
    </header>
    <p class="tags">
        {% for tag, weight in tags %}
            <span class="weight-{{ weight }}">{{ tag }}</span>
        {% else %}
            <p>{{ 'page.sidebar.no_tags'|trans({}, 'translation') }}</p>
        {% endfor %}
    </p>
</section>
<section class="section">
    <header>
        <h3>{{ 'page.sidebar.recent_comments'|trans({}, 'translation') }}</h3>
    </header>
    {% for comment in latestComments %}
        <article class="comment">
            <header>
                <p class="small"><span class="highlight">{{ comment.user }}</span> {{ 'page.sidebar.commented'|trans({}, 'translation') }}
                    <a href="{{ path('BloggerBlogBundle_blog_show', { 'id': comment.blog.id, 'slug': comment.blog.slug }) }}#comment-{{ comment.id }}">
                        {{ comment.blog.title }}
                    </a>
                    <em><time datetime="{{ comment.created|date('c') }}">{{ comment.created|created_ago }}</time></em>
                </p>
            </header>
            <p>{{ comment.comment }}</p>
        </article>
    {% else %}
        <p>{{ 'page.sidebar.no_comments'|trans({}, 'translation') }}</p>
    {% endfor %}
</section>
