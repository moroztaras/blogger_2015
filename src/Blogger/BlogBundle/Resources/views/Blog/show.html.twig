{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ blog.created|date('c') }}">{{ blog.created|date('l, F j, Y') }}</time></div>
            <h2>{{ blog.title }}</h2>
        </header>
        <img src="{{ asset(['bundles/bloggerblog/images/', blog.image]|join) }}" alt="{{ blog.title }} рисунок не знайдений" class="large" />
        <div>
            <p>{{ blog.blog }}</p>
        </div>
        <footer class="meta">
            <p>Автор: <span class="highlight">{{blog.author}}</span>, о {{ blog.created|date('H:m:s') }}</p>
        </footer>
    </article>
    <section class="comments" id="comments">
        <section class="previous-comments">
            <h3>Коментарі</h3>
            {% include 'BloggerBlogBundle:Comment:index.html.twig' with { 'comments': comments } %}
        </section>
        <h3>Додати коментарій</h3>
        {% render 'BloggerBlogBundle:Comment:new' with { 'blog_id': blog.id } %}
    </section>
{% endblock %}